<Window x:Class="ClubManager.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClubManager"
        mc:Ignorable="d"
        Icon="Resources/game-controller-14896.ico"
        Title="ClubManager" Height="540" Width="960" ResizeMode="NoResize" Closed="Window_Closed" >
    <StackPanel>
        <Label Foreground="Black" Content="ClubManager" FontSize="48" FontWeight="Bold" HorizontalAlignment="Center" Margin="0 68 0 0" />
        <Label Content="Авторизация" FontSize="30" HorizontalAlignment="Center" />
        <StackPanel Width="480">
            <Label DockPanel.Dock="Top" Content="Логин" FontSize="24" />
            <TextBox x:Name="Login" BorderBrush="Black" FontSize="24" Height="38" />
            <Label Content="Пароль" FontSize="24" />
            <PasswordBox x:Name="Password" BorderBrush="Black" FontSize="24" Height="38" PasswordChar="*" />
        </StackPanel>
        <Button Click="Button_Click" Width="264" Height="65" Foreground="White" Content="Войти" FontSize="24" Margin="0 50" />
    </StackPanel>
</Window>